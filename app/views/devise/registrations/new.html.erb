



<div class="login">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

    <p>
		<%= f.label :email ,:type=>'text'%>
        <%= f.email_field :email, :autofocus => true,:type=>'text' %>
    </p>


    <p>
	    <%= f.label :password ,:type=>'text'%>
        <%= f.password_field :password %>
    </p>
    
    <p>
	    <%= f.label :Re_type ,:type=>'text'%>
        <%= f.password_field :password_confirmation %>
    </p>
  

    <p>
	    <%= f.label :username ,:type=>'text'%>
        <%= f.text_field :username %>
    </p>
   <p>
    <%= f.label :image %><br />
   <%= f.file_field :avatar %>
  </p>

    <p class="login-submit">
        <button type="submit" class="login-button">Sign Up</button>
    </p>

    <%= render "devise/shared/links" %>
  <%end%>


</div>
<div align="center">
<p class="notice"><font color="red"><%= devise_error_messages! %></font></p>
</div>